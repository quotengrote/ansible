version: '2.3'

services:
  statping:
    container_name: statping
    image: "adamboutcher/statping-ng:latest@sha256:e32bd2e50ca023f37b0650e1942d51cb9269a2caab11042bc0cc53fac0474a2b"
    restart: always
    volumes:
      - statping_data:/app
    environment:
      DB_CONN: sqlite
      ALLOW_REPORT: false
      ADMIN_USER: statadmin
      ADMIN_PASSWORD: "{{ lookup('keepass', 'statping_admin_password', 'password') }}"
      SAMPLE_DATA: false
    ports:
      - 8083:8080
    networks:
      - mail-relay
    labels:
      com.centurylinklabs.watchtower.enable: true

volumes:
  statping_data:
networks:
  mail-relay:
    external: true
